<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">

            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="@color/ProjectLightGreen" />
            <corners android:radius="10dp" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="5dp"
                android:color="#f0f0f0f0"
                />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="#ffffff" />
            <corners android:radius="10dp" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="5dp"
                android:color="#f0f0f0f0"
                />

        </shape>
    </item>
</selector>